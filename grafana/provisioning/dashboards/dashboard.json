{
  "id": null,
  "uid": "fastapi-dashboard-v2",
  "title": "Estado del sistema FastAPI",
  "tags": [
    "monitoring",
    "fastapi",
    "devops"
  ],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 8,
  "refresh": "10s",
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "definition": "label_values(http_requests_total, job)",
        "query": {
          "query": "label_values(http_requests_total, job)",
          "refId": "JobQuery"
        },
        "refresh": 1,
        "label": "Cliente",
        "current": {
          "text": "Seleccionar",
          "value": "$job"
        }
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "definition": "label_values(http_requests_total{job=\"$job\"}, instance)",
        "query": {
          "query": "label_values(http_requests_total{job=\"$job\"}, instance)",
          "refId": "InstQuery"
        },
        "refresh": 1,
        "label": "Instancia",
        "current": {
          "text": "Seleccionar",
          "value": "$instance"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Logs de errores (Loki)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "h": 10,
        "w": 24
      },
      "targets": [
        {
          "expr": "{job=\"cliente\"} |= \"error\"",
          "refId": "A",
          "datasource": "Loki"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "enableInfiniteScrolling": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Total de peticiones HTTP",
      "gridPos": {
        "x": 0,
        "y": 10,
        "h": 8,
        "w": 24
      },
      "targets": [
        {
          "expr": "sum(http_requests_total{job=\"$job\", instance=\"$instance\"})",
          "refId": "B",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 3,
      "type": "gauge",
      "title": "Uso de CPU (%)",
      "gridPos": {
        "x": 0,
        "y": 18,
        "h": 6,
        "w": 8
      },
      "targets": [
        {
          "expr": "cpu_percent{job=\"$job\", instance=\"$instance\"}",
          "refId": "C",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "gauge",
      "title": "Uso de RAM (%)",
      "gridPos": {
        "x": 8,
        "y": 18,
        "h": 6,
        "w": 8
      },
      "targets": [
        {
          "expr": "memory_percent{job=\"$job\", instance=\"$instance\"}",
          "refId": "D",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 80
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "gauge",
      "title": "Uso de Disco (%)",
      "gridPos": {
        "x": 16,
        "y": 18,
        "h": 6,
        "w": 8
      },
      "targets": [
        {
          "expr": "disk_usage{job=\"$job\", instance=\"$instance\"}",
          "refId": "E",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 80
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Solicitudes HTTP por endpoint (cliente)",
      "gridPos": {
        "x": 0,
        "y": 24,
        "h": 8,
        "w": 24
      },
      "targets": [
        {
          "expr": "sum by (endpoint, method) (http_requests_total{job=\"$job\", instance=\"$instance\"})",
          "refId": "F",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    }
  ]
}