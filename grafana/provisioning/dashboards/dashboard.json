{
  "id": null,
  "uid": "fastapi-dashboard-v2",
  "title": "Estado del sistema FastAPI",
  "tags": ["monitoring", "fastapi", "devops"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 9,
  "refresh": "10s",
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "cliente",
        "type": "query",
        "datasource": "Prometheus",
        "definition": "label_values(cpu_percent, job)",
        "query": {
          "query": "label_values(cpu_percent, job)",
          "refId": "ClienteQuery"
        },
        "refresh": 1,
        "label": "Cliente",
        "current": {
          "text": "Seleccionar",
          "value": "$cliente"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Logs de errores (Loki)",
      "gridPos": {"x": 0, "y": 0, "h": 10, "w": 24},
      "targets": [
        {
          "expr": "{job=\"$cliente\"} |= \"error\"",
          "refId": "A",
          "datasource": "Loki"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "enableInfiniteScrolling": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Total de peticiones HTTP",
      "gridPos": {"x": 0, "y": 10, "h": 8, "w": 24},
      "targets": [
        {
          "expr": "sum(http_requests_total{job=\"$cliente\"})",
          "refId": "B",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Solicitudes HTTP por endpoint (cliente)",
      "gridPos": {"x": 0, "y": 24, "h": 8, "w": 24},
      "targets": [
        {
          "expr": "sum by (endpoint, method) (http_requests_total{job=\"$cliente\"})",
          "refId": "F",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      }
    }
  ]
}
