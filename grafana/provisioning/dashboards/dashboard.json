{
  "id": null,
  "uid": "fastapi-dashboard-v2",
  "title": "Estado del sistema FastAPI",
  "tags": ["monitoring", "fastapi", "devops"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 8,
  "refresh": "10s",
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "cliente",
        "type": "query",
        "datasource": "Prometheus",
        "definition": "label_values(http_requests_total, exported_instance)",
        "query": {
          "query": "label_values(http_requests_total, exported_instance)",
          "refId": "PromQuery"
        },
        "refresh": 1,
        "sort": 1,
        "hide": 0,
        "multi": false,
        "includeAll": false,
        "label": "Cliente",
        "current": {
          "text": "cliente",
          "value": "$cliente"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Logs de errores (Loki)",
      "gridPos": { "x": 0, "y": 0, "h": 10, "w": 24 },
      "targets": [
        {
          "expr": "{job=\"cliente\"} |= \"error\"",
          "refId": "A",
          "datasource": "Loki"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "enableInfiniteScrolling": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Total de peticiones HTTP",
      "gridPos": { "x": 0, "y": 10, "h": 8, "w": 24 },
      "targets": [
        {
          "expr": "sum(http_requests_total{exported_instance=\"$cliente\"})",
          "refId": "B",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "type": "gauge",
      "title": "Uso de CPU (%)",
      "gridPos": { "x": 0, "y": 18, "h": 6, "w": 8 },
      "targets": [
        {
          "expr": "cpu_percent{exported_instance=\"$cliente\"}",
          "refId": "C",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "gauge",
      "title": "Uso de RAM (%)",
      "gridPos": { "x": 8, "y": 18, "h": 6, "w": 8 },
      "targets": [
        {
          "expr": "memory_percent{exported_instance=\"$cliente\"}",
          "refId": "D",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "gauge",
      "title": "Uso de Disco (%)",
      "gridPos": { "x": 16, "y": 18, "h": 6, "w": 8 },
      "targets": [
        {
          "expr": "disk_usage{exported_instance=\"$cliente\"}",
          "refId": "E",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Solicitudes HTTP por endpoint (cliente)",
      "gridPos": { "x": 0, "y": 24, "h": 8, "w": 24 },
      "targets": [
        {
          "expr": "sum by (endpoint, method) (http_requests_total{exported_instance=\"$cliente\"})",
          "refId": "F",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    }
  ]
}
