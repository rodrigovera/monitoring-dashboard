  {
    "id": null,
    "uid": "fastapi-dashboard",
    "title": "Dashboard de FastAPI",
    "tags": [],
    "timezone": "browser",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "type": "logs",
        "title": "Logs de errores (job=errors)",
        "gridPos": { "x": 0, "y": 0, "h": 10, "w": 24 },
        "targets": [
          {
            "expr": "{job=\"errors\"}",
            "refId": "A",
            "datasource": "Loki"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": true,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "enableInfiniteScrolling": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Total de peticiones HTTP (http_requests_total)",
        "gridPos": { "x": 0, "y": 10, "h": 10, "w": 24 },
        "targets": [
          {
            "expr": "http_requests_total{job=\"fastapi\"}",
            "refId": "B",
            "datasource": "Prometheus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      }
    ]
  }

